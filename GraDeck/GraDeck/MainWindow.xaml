<Window x:Class="GraDeck.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraDeck"
        mc:Ignorable="d"
        Title="GraDeck - Карточная игра" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#F0F0F0">
        <StackPanel VerticalAlignment="Top" Margin="10">
            <TextBlock Text="GraDeck" FontSize="28" FontWeight="Bold" Foreground="#333"/>
            <Button Name="StartGameButton" Content="Начать игру" Click="StartGameButton_Click" 
                    Padding="10" Margin="0,10,0,0" Width="150" Background="#4CAF50" Foreground="White"/>
        </StackPanel>
        
        <ScrollViewer VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="10,80,10,10">
            <WrapPanel Name="CardsPanel" HorizontalAlignment="Left" VerticalAlignment="Top" 
                       Background="White" Margin="10">
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</Window>
